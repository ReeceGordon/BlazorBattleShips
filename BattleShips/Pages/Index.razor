    private void HandleValidSubmit()
    {
        char y = Convert.ToChar(inputTile.Y);
        int x = inputTile.X - 1;
        Count = 1;

        //Makes tile Hit on the real grid
        foreach (var element in Grid)
        {
            if (element.X == x && element.Y == y)
            {
                element.ShipSpace = 4;
            }
        }

        //Makes tile Hit on the hidden grid
        foreach (var element in GridHidden)
        {
            if (element.X == x && element.Y == y)
            {
                element.ShipSpace = 4;
            }
        }

        //Check whether any ships remain
        bool BattleshipFound = false;
        bool DuncanFound = false;
        bool DefenderFound = false;

        foreach (var element in Grid)
        {
            if (element.ShipSpace == 1)
            {
                BattleshipFound = true;
            }
            if (element.ShipSpace == 2)
            {
                DuncanFound = true;
            }
            if (element.ShipSpace == 3)
            {
                DefenderFound = true;
            }
        }

        //If any ships are found the wincondition isn't found, else it is and the game can end
        if (BattleshipFound || DuncanFound || DefenderFound)
        {
            winCondition = false;
        }
        else
        {
            winCondition = true;
        }
    }


